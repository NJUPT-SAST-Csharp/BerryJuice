@page "/User"
@rendermode InteractiveServer
@inject NavigationManager Navigation

<MudStack AlignItems="AlignItems.Center" Justify="Justify.Center" Spacing="2" Height="100vh">
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="navigation" Style="min-width: 150px; margin: 10px;">Login</MudButton>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="_navigation" Style="min-width: 150px; margin: 10px;">Register</MudButton>
</MudStack>

@code {

    public void navigation()
    {
        Navigation.NavigateTo(uri: "/Login");
    }

    public void _navigation()
    {
        Navigation.NavigateTo(uri: "/Register");
    }

}