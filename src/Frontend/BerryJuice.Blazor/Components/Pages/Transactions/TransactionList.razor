@using Primitives.EventBusScopedWrapper
@inject IEventBusWrapper EventBus
@rendermode InteractiveServer

<MudText Typo="Typo.h3">账目</MudText>

<MudTimeline TimelinePosition="TimelinePosition.Left">
    @foreach (var transaction in _transactions)
    {
        <MudTimelineItem>
            <MudText>@(transaction.Description)</MudText>
            <MudText>金额: @(transaction.Amount)</MudText>
            <MudStack Row="true">
                @foreach (var tag in transaction.Tags)
                {
                    <MudChip T="string" Disabled="true" Variant="Variant.Text" Color="Color.Primary">@(tag.TagName)</MudChip>
                }
            </MudStack>
        </MudTimelineItem>
    }
</MudTimeline>
