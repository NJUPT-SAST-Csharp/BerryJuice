@page "/BookKeepPage"
@rendermode InteractiveServer

<h3>BookKeepPage</h3>

<p>You can bookkeep your daily costs here</p>

<label for="Expense Type">Expense Type:</label>
<input id="Expense Type" @bind="newCostEntry.ExpenseType" placeholder="Enter expense type" />

<label for="Amout">Amount:</label>
<input id="Amout" type="number" @bind="newCostEntry.Money" placeholder="Enter amount" />

<button @onclick="AddCostEntry">Add Cost Entry</button>

<h4>Cost Entries</h4>
<ul>
    @foreach (var entry in costEntries)
    {
        <li>@entry.ExpenseType: @entry.Money</li>
    }
</ul>

<p>
    <NavLink href="/Budget">Go to Budget Page</NavLink>
</p>

@code {
    private class CostEntry
    {
        public string ExpenseType { get; set; }
        public decimal Money { get; set; }
    }

    private List<CostEntry> costEntries = new List<CostEntry>();
    private CostEntry newCostEntry = new CostEntry();

    private void AddCostEntry()
    {
        if (!string.IsNullOrWhiteSpace(newCostEntry.ExpenseType) && newCostEntry.Money > 0)
        {
            costEntries.Add(new CostEntry
                {
                    ExpenseType = newCostEntry.ExpenseType,
                    Money = newCostEntry.Money
                });

            newCostEntry = new CostEntry();
        }
    }
}
