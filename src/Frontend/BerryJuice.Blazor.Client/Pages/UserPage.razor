@page "/User"
@rendermode InteractiveServer
@inject NavigationManager Navigation

<h3>UserPage</h3>

@* 用户信息展示 *@

<button class="btn btn-primary" @onclick="navigation">Login</button>
<button class="btn btn-primary" @onclick="_navigation">Register</button>

@code {

    public void navigation()
    {
        Navigation.NavigateTo(uri: "/Login");
    }

    public void _navigation()
    {
        Navigation.NavigateTo(uri: "/Register");
    }

}